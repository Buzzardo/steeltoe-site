    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Steeltoe" %></title>
    <link rel="icon" href="images/favicon.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Karla:400,400i|Poppins:400,700|Roboto+Mono">
    <%= stylesheet_link_tag :site %>
