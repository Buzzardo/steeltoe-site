<!doctype html>
<html>
  <%= partial 'shared/head' %>
  <body class="<%= page_classes %>">
    <%= partial 'shared/nav' %>
    <div class="max-width-4 mx-auto">
      <div class="p2">
        <h2 class="regular my0 steel-body muted">
          <i class="fa fa-file-text"></i>
        </h2>
        <h1 class="mt0 mb3 steel-heading">Documentation</h1>
        <div class="clearfix">
          <div class="col col-12 sm-col-3 sm-pr3">
            <%= partial 'shared/docs-toc' %>
          </div>
          <div class="col col-12 sm-col-9">
            <% if !current_article.nil? %>
              <h2 class="regular"><%= current_article.metadata[:page][:title] %></h2>
            <% end %>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <%= partial 'shared/footer' %>
    <%= partial 'shared/ga' %>
  </body>
</html>
